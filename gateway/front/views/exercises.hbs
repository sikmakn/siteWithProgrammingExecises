<link rel="stylesheet" href="/styles/outputTests.css">
{{#with theme}}
    <a href="/exercises/{{_id}}/{{../difficulty}}/prev" class="prev" onclick="">
        <span class="material-icons arrows">keyboard_arrow_left</span>
    </a>
    <a href="/exercises/{{_id}}/{{../difficulty}}/next" class="next">
        <span class="material-icons arrows">keyboard_arrow_right</span>
    </a>
{{/with}}
{{#with theme}}
    <div class="exercisesPageContainer">
        <div class="title">
            <a href="/{{language}}" class="themeName">{{number}}. {{name}}</a>
            <a href="{{theoryLink}}" class="theoryLink" target="_blank">Сначала изучите теорию</a>
            {{>semaphore _id=_id}}
        </div>
{{/with}}

    <div class="exercises">
        {{#each exercises}}
            <div class="exercise" id="{{_id}}">
                <button type="button" class="collapsible"
                        onclick="collapsibleClick(event,'{{_id}}','{{language}}',`{{oldResult.sourceCode}}`)">
                    <span>{{number}}. {{task}}</span>
                    <span id="resultIcon{{_id}}">
                        {{#if oldResult.correct}}
                            <i class="fas fa-check successTest" title="Успешно прошел тесты"></i>
                        {{/if}}
                        {{#if oldResult.incorrect}}
                            <i class="fas fa-times wrongTest" title="Неправильный ответ"></i>
                        {{/if}}
                        {{#if oldResult.error}}
                            <i class="fas fa-question errorTest" title="Ошибка в коде"></i>
                        {{/if}}
                    </span>
                </button>
                <div class="editorContainer">
                    <div class="editor" id="editor{{_id}}"></div>
                    <div class="control">
                        <div class="output testsOut"></div>
                        <button class="start" onclick="test(event)">Запустить тесты</button>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
<script src="https://kit.fontawesome.com/a81368914c.js"></script>
<script src="/src-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>
<script src="/options/aceOptions.js"></script>
<script src="/scripts/dist/exercises.js"></script>